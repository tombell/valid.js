    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@vitest/coverage-v8": "^1.4.0",
    "typescript": "^5.5.3",
    "vitest": "^1.4.0"
  }
}
