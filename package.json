{
  "name": "@tombell/valid",
  "version": "0.0.2",
  "description": "Package for simple validation checks",
  "keywords": ["validation"],
  "author": "Tom Bell <tomb@tomb.io>",
  "license": "BSD-3-Clause",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": ["dist/"],
  "scripts": {
